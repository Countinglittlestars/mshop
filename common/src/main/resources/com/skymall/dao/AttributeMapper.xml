<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.skymall.dao.AttributeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.skymall.domain.Attribute">
        <id column="id" property="id" />
        <result column="attribute_category_id" property="attributeCategoryId" />
        <result column="name" property="name" />
        <result column="input_type" property="inputType" />
        <result column="value" property="value" />
        <result column="sort_order" property="sortOrder" />
    </resultMap>

    
    <select id="queryByGoodId" parameterType="Integer">
      select a.* from nideshop_attribute a , nideshop_goods_attribute ga where a.id  = ga.attribute_id and goods_id = #{goodId}
    </select>

    <select id="queryEntity" parameterType="com.skymall.dto.AttributeQueryDto" resultType="com.skymall.vo.admin.AttributeEntity">
    SELECT
    b.name attributeCategoryName,
    a.id id,
    a.name attributeName,
    a.sort_order sortOrder
    FROM nideshop_attribute a , nideshop_attribute_category b
    WHERE 1=1
    <if test="dto.attributeCategoryName != null">
        AND b.name like concat('%',#{dto.attributeCategoryName},'%')
    </if>
    <if test="dto.attributeName != null">
        AND a.name like concat('%',#{dto.attributeName},'%')
    </if>
    ORDER BY a.id ASC
    </select>
</mapper>
