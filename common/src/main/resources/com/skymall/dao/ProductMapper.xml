<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.skymall.dao.ProductMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.skymall.domain.Product">
        <id column="id" property="id" />
        <result column="goods_id" property="goodsId" />
        <result column="goods_specification_ids" property="goodsSpecificationIds" />
        <result column="goods_sn" property="goodsSn" />
        <result column="goods_number" property="goodsNumber" />
        <result column="retail_price" property="retailPrice" />
        <result column="market_price" property="marketPrice" />
    </resultMap>
    
    <select id="queryList" resultType="com.skymall.vo.wechat.ProductVo" parameterType="Integer">
      select a.*, b.name `goodsName`, b.list_pic_url as list_pic_url from nideshop_product a left join nideshop_goods b on a.goods_id = b.id where a.goods_id = #{goodId}
    </select>


</mapper>
